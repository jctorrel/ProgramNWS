{
  "name": "mentor-ai",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "commonjs",
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev": "tsx server.ts",
    "dev:client": "npm --workspace client run dev",
    "build:server": "tsc",
    "build:client": "npm --workspace client run build",
    "postbuild": "rimraf dist/public && cpr client/dist dist/public",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "connect-mongo": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mongodb": "^7.0.0",
    "openai": "^6.9.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.6",
    "remark-gfm": "^4.0.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.22",
    "cpr": "^3.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "vite-plugin-mkcert": "^1.17.9"
  }
}
